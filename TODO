});

eventify(obj, 'socket').define('onSomethingReceived')
obj.onSomethingReceived().emit();

obj.onSomethingReceived(function () {})

var subs = eventify.listen(function () {}) // any event
var subs = eventify.listen('./onSomeEvent', function () {}) //unnamespaced events
var subs = eventify.listen('in-some-channel/onSomeEvent', function () {});

obj.onMouseMoved().withInterval(1234, function listener() {})

